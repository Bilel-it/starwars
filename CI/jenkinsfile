pipeline {    
    options { skipDefaultCheckout() }
    agent {label 'jenkinsmaster'}  
    stages {
        stage('BUILD & Push Image') {
            steps{
                script {
                GIT_COMMIT_HASH = sh "(git log -n 1 --pretty=format:'%H')"
                checkout scm
                }
                }
            steps{

                echo "#################### Build  frontend  #################"
                sh '''  
                        docker build -t frontend:+${GIT_COMMIT_HASH} FE
                       

                '''
                echo "#################### Tag & Push Image ms-frontend to azurecr.io #################"
                sh '''  
                        
                        docker tag frontend:1.1-4 imagedockerpaas.azurecr.io/frontend:+${GIT_COMMIT_HASH}
                        docker push imagedockerpaas.azurecr.io/frontend:+${GIT_COMMIT_HASH}

                '''




                echo "#################################"
                echo "#################### backend #################"
                sh '''  
                        docker build -t backend:+${GIT_COMMIT_HASH} BE
                        
                '''
                echo "#################### Tag & Push Image products #################"
                sh '''  
                        docker tag backend:1.1-4 imagedockerpaas.azurecr.io/backend:+${GIT_COMMIT_HASH}
                        docker push imagedockerpaas.azurecr.io/backend:+${GIT_COMMIT_HASH}
                '''
               
                

                

                
            } 
        } 
    }
        
}
