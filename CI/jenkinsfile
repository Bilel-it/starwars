pipeline {    
    options { skipDefaultCheckout() }
    agent {label 'jenkinsmaster'}  
    stages {
        stage('BUILD & Push Image') {
            steps{
                checkout scm

                echo "#################### Build  frontend  #################"
                sh '''  
                        docker build frontend FE
                       

                '''
                echo "#################### Tag & Push Image ms-frontend to azurecr.io #################"
                sh '''  
                        
                        docker tag frontend imagedockerpaas.azurecr.io/frontend:1.0
                        docker push imagedockerpaas.azurecr.io/frontend:1.0

                '''




                echo "#################################"
                echo "#################### backend #################"
                sh '''  
                        docker build backend BE
                        
                '''
                echo "#################### Tag & Push Image products #################"
                sh '''  
                        docker tag backend imagedockerpaas.azurecr.io/backend:1.0
                        docker push imagedockerpaas.azurecr.io/ms-products:1.0
                '''
               
                

                

                
            } 
        } 
    }
        
}
