pipeline {    
    options { skipDefaultCheckout() }
    agent {label 'jenkinsmaster'}  
    stages {
    
    
    
    
    stage('Tag') {
            
         
         steps{
    script {
     
     
     GIT_COMMIT_HASH = sh (
    script: "git log -n 1 --pretty=format:'%H'",
    returnStdout: true
).trim()   
     
               

                echo "**************************************************"
                echo "bilel ${GIT_COMMIT_HASH}"
                echo "**************************************************"
                
                
                
    }
}
       
                  
            

        }
    
    
    
    
    
    
        stage('BUILD & Push Image') {
            steps{
                checkout scm
                
                front = "frontend:${GIT_COMMIT_HASH}"
                echo "${front}"

                echo "#################### Build  frontend  #################"
                

back = "backend:${GIT_COMMIT_HASH}"
                echo "${back}"


                echo "#################################"
                echo "#################### backend #################"
                
               
                

                

                
            } 
        } 
        
    }
        
}
